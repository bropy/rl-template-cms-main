{
  "name": "template",
  "version": "1.0.0",
  "description": "RubyLabs CMS template",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "docker:up": "docker compose -f src/app/(payload)/docker-compose.yml up -d",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "generate:schema": "cross-env NODE_OPTIONS=--no-deprecation payload generate:db-schema",
    "migrate:dev": "cross-env NODE_OPTIONS=--no-deprecation payload migrate:create",
    "migrate:dep": "cross-env NODE_OPTIONS=--no-deprecation payload migrate",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "type-check": "tsc --noEmit",
    "format": "yarn type-check && yarn lint && yarn prettier",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "dev": "yarn docker:up && yarn generate:types && yarn generate:importmap && yarn migrate:dep && next dev --turbopack",
    "build": "yarn migrate:dep && next build",
    "start": "next start"
  },
  "dependencies": {
    "@flags-sdk/growthbook": "^0.1.0",
    "@growthbook/growthbook-react": "^1.6.1",
    "@heroui/react": "^2.8.1",
    "@hookform/resolvers": "^5.2.2",
    "@internationalized/date": "^3.8.2",
    "@payload-enchants/translator": "^1.3.0",
    "@payloadcms/db-postgres": "3.48.0",
    "@payloadcms/next": "3.48.0",
    "@payloadcms/payload-cloud": "3.48.0",
    "@payloadcms/plugin-seo": "^3.48.0",
    "@payloadcms/richtext-lexical": "3.48.0",
    "@payloadcms/storage-s3": "^3.48.0",
    "@payloadcms/ui": "3.48.0",
    "@react-aria/i18n": "^3.12.11",
    "@svgr/webpack": "^8.1.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "cross-env": "^7.0.3",
    "embla-carousel-react": "^8.6.0",
    "flags": "^4.0.1",
    "framer-motion": "^12.23.7",
    "graphql": "^16.11.0",
    "ky": "^1.8.2",
    "lucide-react": "^0.525.0",
    "luxon": "^3.7.1",
    "nanoid": "^5.1.5",
    "next": "15.4.3",
    "next-intl": "^4.3.4",
    "next-themes": "^0.4.6",
    "payload": "3.48.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-scan": "^0.4.3",
    "rtl-detect": "^1.1.2",
    "sharp": "0.34.3",
    "usehooks-ts": "^3.1.1",
    "zod": "^4.1.9",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.30",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/rtl-detect": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-next": "15.4.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": "22.x"
  },
  "packageManager": "yarn@1.22.22",
  "volta": {
    "node": "22.17.1",
    "yarn": "1.22.22"
  }
}
